doctype html
html
	head
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		title Bootstrap Blog Boilerplate
		link(href='/less/bootstrap.css', rel='stylesheet')
		link(href='/less/stylesheet.css', rel='stylesheet')
	body
		.navbar.navbar-inverse.navbar-fixed-top
			.container
				.navbar-header
					button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
						span.icon-bar
						span.icon-bar
						span.icon-bar
				.collapse.navbar-collapse
					ul.nav.navbar-nav
						li
							a(href='/') Home
						li
							a(href='/posts') Blog Posts
						if user
							li.active
								a(href='#') create

					ul.nav.navbar-nav.navbar-right
						li
							if user
								a(href='/auth/logout')
									| #{user.title}
									img(src="#{user.photo}")
							else
								a(href='/auth/facebook') Login

		.container
			.create
				form(name="input", action="/post/new", method="post")
					h2.form-signin-heading Create New Post
					input.form-control(type='text', placeholder='Post Title', autofocus='autofocus', name="title")
					textarea(class="form-control", id="post", name="text", placeholder="Please enter your post here...", rows="5")
					button.btn.btn-lg.btn-primary.btn-block(type='submit') Publish

		script(src='/libs/jquery.min.js')
		script(src='/libs/bootstrap.min.js')