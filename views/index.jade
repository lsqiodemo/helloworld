doctype html
html
	head
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		title Bootstrap Blog Boilerplate
		link(href='/less/bootstrap.css', rel='stylesheet')
		link(href='/less/stylesheet.css', rel='stylesheet')
	body
		.navbar.navbar-inverse.navbar-fixed-top
			.container
				.navbar-header
					button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
						span.icon-bar
						span.icon-bar
						span.icon-bar
				.collapse.navbar-collapse
					ul.nav.navbar-nav
						li.active
							a(href='#') Home
						li
							a(href='/posts') Blog Posts
						if user
							li
								a(href='create') create
						
					ul.nav.navbar-nav.navbar-right
						li
							if user
								a(href='/auth/logout') 
									| #{user.title}	
									img(src="#{user.photo}")
							else
								a(href='/auth/facebook') Login

		.container
			.starter-template
				h1 Edit Test
				p.lead
					| test each of the&nbsp;
					a(href='http://bit.ly/181yG5r') Bootstrap 3 version of the sample templates&nbsp;
					| by clicking on the links below

		script(src='/libs/jquery.js')
		script(src='/libs/bootstrap.min.js')
